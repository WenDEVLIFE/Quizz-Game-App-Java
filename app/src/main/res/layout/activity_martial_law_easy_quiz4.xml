<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0B60B0"
        tools:context="MartialLaw_Easy_Package.MartialLaw_Easy_Quiz4">

    <ImageView
            android:layout_width="62dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ideas"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.933" />

    <ImageView
            android:layout_width="57dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/chronometer"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            android:layout_marginBottom="24dp"
            app:layout_constraintHorizontal_bias="0.505" />

    <TextView
            android:text="Which constitutional rights were curtailed or suspended during martial law?"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="1.0" />

    <TextView
            android:text="Quiz 4"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="106dp"
            android:layout_height="41dp"
            android:id="@+id/textView6"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.516" />

    <TextView
            android:text="Time: 00: 00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="98dp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.0" />

    <RadioButton
            android:text="Freedom of assembly and speech"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="182dp"
            android:layout_height="55dp"
            android:id="@+id/radioButton"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            android:layout_marginBottom="304dp" />

    <RadioButton
            android:text="Right to bear arms"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="175dp"
            android:layout_height="74dp"
            android:id="@+id/radioButton2"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            android:layout_marginBottom="212dp" />

    <RadioButton
            android:text="None of the above"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="164dp"
            android:layout_height="61dp"
            android:id="@+id/radioButton3"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.944"
            android:layout_marginBottom="220dp" />

    <RadioButton
            android:text="Right to education"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="176dp"
            android:layout_height="61dp"
            android:id="@+id/radioButton1"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.995"
            android:layout_marginBottom="296dp" />

    <Button
            android:text="Click to Submit"
            android:layout_width="243dp"
            android:layout_height="58dp"
            android:id="@+id/submit_button"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="136dp" />

    <Button
            android:text="Click to next page"
            android:layout_width="243dp"
            android:layout_height="58dp"
            android:id="@+id/next_button"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/score_result" />

    <TextView
            android:text="Your answer:"
            android:layout_width="393dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/score_result"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.266"
            android:layout_marginBottom="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>