<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6895D2"
        tools:context="Philippine_American_Quiz_package.US_PH_QUIZ2">

    <ImageView
            android:layout_width="62dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ideas"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.855" />

    <ImageView
            android:layout_width="57dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/chronometer"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            android:layout_marginBottom="28dp" />

    <TextView
            android:text="When did Philippine-American War started?"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="72dp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0" />

    <TextView
            android:text="Quiz 2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="106dp"
            android:layout_height="41dp"
            android:id="@+id/textView6"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintVertical_bias="0.129" />

    <TextView
            android:text="Time: 00: 00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="98dp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.0" />

    <RadioButton
            android:text="February 4, 1899"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            android:layout_marginBottom="352dp" />

    <RadioButton
            android:text=" June 12, 1898"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            android:layout_marginBottom="260dp" />

    <RadioButton
            android:text=" August 23, 1896"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.872"
            android:layout_marginBottom="260dp" />

    <RadioButton
            android:text=" June 02, 1902"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.849"
            android:layout_marginBottom="352dp" />

    <Button
            android:text="Click to Submit"
            android:layout_width="243dp"
            android:layout_height="58dp"
            android:id="@+id/submit_button"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="172dp" />

    <Button
            android:text="Click to next page"
            android:layout_width="243dp"
            android:layout_height="58dp"
            android:id="@+id/next_button"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/score_result" />

    <TextView
            android:text="Your answer:"
            android:layout_width="393dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:id="@+id/score_result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.266"
            android:layout_marginBottom="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>