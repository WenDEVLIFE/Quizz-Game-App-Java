<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Menu">

    <!-- This will set the background of the layout -->
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/history"
        tools:context=".Menu">

    <!-- This will set the size of the imageview
    and its properties -->


    <TextView
            android:text="@string/select_a_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />

    <TextView
            android:text="@string/pilippine_american_war1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />

    <TextView
            android:text="@string/martial_law1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif"
            android:layout_marginTop="664dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="104dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />

    <!-- This will set the imageview to the center of the layout -->


    <ImageView


            android:id="@+id/imageview2"
            android:layout_width="301dp"
            android:layout_height="193dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button3"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0.835"
            android:background="@drawable/border_background" />

    <Button
            android:text="@string/start_now1"
            android:layout_width="277dp"
            android:layout_height="61dp"
            android:id="@+id/button2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintVertical_bias="0.016"
            app:layout_constraintHorizontal_bias="0.46" />

    <Button
            android:text="@string/start_now"
            android:layout_width="296dp"
            android:layout_height="67dp"
            android:id="@+id/button3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.53" />

    <ImageView
            android:id="@+id/imageview_second"
            android:layout_width="320dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button3"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_background1"
            android:contentDescription="@string/historical_events_in_the_philippines"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintVertical_bias="0.126" />

    <ImageView
            android:src="@drawable/ww2_border"
            android:layout_width="313dp"
            android:layout_height="198dp"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.453" />

    <TextView
            android:text="World War 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.498" />

    <Button
            android:text="Start Now"
            android:layout_width="294dp"
            android:layout_height="62dp"
            android:id="@+id/button6"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.436" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>