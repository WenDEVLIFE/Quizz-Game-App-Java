<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Menu">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">

    <!-- This will set the size of the imageview
    and its properties -->

    <ImageView
            android:layout_width="2365dp"
            android:layout_height="1350dp"
            android:id="@+id/imageView"
            android:src="@drawable/history"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="51dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />

    <TextView
            android:text="Select a category"
            android:layout_width="383dp"
            android:layout_height="63dp"
            android:id="@+id/textView1"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent"
    android:contentDescription="@string/historical_events_in_the_philippines" />
    <TextView
            android:text="Pilippine-American War "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="316dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />
    <TextView
            android:text="Martial Law"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="736dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="128dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />

    <ImageView
            android:layout_width="416dp"
            android:layout_height="196dp"
            tools:srcCompat="@drawable/warph"
            android:id="@+id/imageView2"

            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />
    <Button
            android:text="Start Now"
            android:layout_width="277dp"
            android:layout_height="61dp"
            android:id="@+id/button3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintHorizontal_bias="0.251"
            app:layout_constraintVertical_bias="0.097" />

    <Button
            android:text="Start Now"
            android:layout_width="296dp"
            android:layout_height="67dp"
            android:id="@+id/button2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintVertical_bias="0.006"
            app:layout_constraintHorizontal_bias="0.281" />

    <ImageView
            android:layout_width="362dp"
            android:layout_height="240dp"
            tools:srcCompat="@drawable/martialaw"
            android:id="@+id/imageView3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/historical_events_in_the_philippines" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>